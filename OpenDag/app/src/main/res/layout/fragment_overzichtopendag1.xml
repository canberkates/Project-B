            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="284dp"
            android:layout_marginEnd="161dp"
            android:text="Workshops"
            android:textSize="17sp" />

        <Button
            android:id="@+id/buttonstudievoorlichting"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="310dp"
            android:text="Studievoorlichting"
            android:textSize="11sp" />

        <Button
            android:id="@+id/buttonstudentaanzet"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="4dp"
            android:text="Student aan zet"
            android:textSize="11sp" />

        <Button
            android:id="@+id/buttontoelatingsexamen"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="104dp"
            android:text="Toelatingsexamen"
            android:textSize="11sp" />

        <Button
            android:id="@+id/buttoninschrijving"
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="202dp"
            android:text="Inschrijving"
            android:textSize="11sp" />

    </LinearLayout>

</ScrollView>