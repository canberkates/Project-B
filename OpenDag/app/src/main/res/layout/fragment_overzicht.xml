<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverzichtFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/Overzicht_titel"
        android:textColor="@color/white"
        android:background="@color/hrrood"
        android:textSize="20sp" />

    <TextView
        android:layout_width="410dp"
        android:layout_height="89dp"
        android:layout_marginTop="40dp"
        android:text="@string/Overzicht"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/opendag1"
        android:layout_width="330dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/opendag1"
        android:textSize="17sp"
        android:background="@drawable/btn_rounded"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="410dp"
        android:layout_height="89dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:text="@string/beschrijvingopendag"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"/>


</LinearLayout>